@model IEnumerable<CustomerInterface.ViewModels.TeacherViewModel>
@{
    ViewData["Title"] = "Lärare";
    ViewBag.PageTitle = "Lärare";
}
<p>
    <a asp-action="Register">Skapa ny lärare</a>
</p>
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeacherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAdress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Expertise)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => teacher.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => teacher.EmailAdress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => teacher.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => teacher.Expertise)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = teacher.TeacherId }) |
                @Html.ActionLink("Delete", "GetDelete", new { id = teacher.TeacherId })
            </td>
        </tr>
    
}
    </tbody>
</table>