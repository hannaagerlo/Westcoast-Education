@page
@model razorApp.Pages.Administration.CourseGallery
@section styles{
<link rel="stylesheet" href="~/css/gallery-page.css">
}
@{
    ViewData["Title"] = "Course Gallery";
}

<h1 class="page-title">Våra kurser</h1>
<a asp-page="/Administration/CreateCourse" class="links">Lägg till kurs</a>

<article>
    <section class="gallery-wrapper">
        @foreach (var course in Model.Courses)
        {
            <div class="gallery-card">
                <h4>@course.Title</h4>
                <a asp-page="./Details" asp-route-id="@course.CourseId">
                    <img src="@course.ImageUrl" alt="course.Title" courseId="@course.CourseId" width="200">
                </a>
                <p>@course.CourseNumber @course.Lenght</p>
                <a asp-page="/Administration/UpdateCourse" asp-route-id="@course.CourseId" class="btn btn-primary" class="links"><i class="fa-solid fa-pen-to-square"></i>Ändra</a>

            </div>
        }
    </section>
</article>
