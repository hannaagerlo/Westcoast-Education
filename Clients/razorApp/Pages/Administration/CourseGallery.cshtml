@page
@model razorApp.Pages.Administration.CourseGallery
@section styles{
<link rel="stylesheet" href="~/css/gallery-page.css">
}
@{
    ViewData["Title"] = "Course Gallery";
}
<h1 class="page-title">Våra kurser</h1>
<br>
 <a class="go-back" asp-page="/Administration/Index"><i class="fa-solid fa-left-long"></i>Startsidan</a>
<br>
<div>
<a asp-page="/Administration/CreateCourse" class="links add-link">Lägg till kurs</a>
<br>
<a asp-page="/Administration/CreateCategory" class="links add-link">Lägg till kategori</a>
</div>

<br>

@if(Model.Courses!.Any())
{
    <article>
    <section class="gallery-wrapper">
        @foreach (var course in Model.Courses)
        {
            <div class="gallery-card">
                <h4>@course.Title</h4>
                <a asp-page="/Details" asp-route-id="@course.CourseId">
                    @* <img src="@course.ImageUrl" alt="course.Title" courseId="@course.CourseId" width="200"> *@
                </a>
                <p>@course.CourseNumber @course.Lenght</p>
                <a asp-page="/Administration/UpdateCourse" asp-route-id="@course.CourseId" class="btn btn-primary" class="links"><i class="fa-solid fa-pen-to-square"></i>Ändra</a>
                <a asp-page="/Administration/DeleteCourse" asp-route-id="@course.CourseId" class="btn btn-primary" class="links"><i class="fa-solid fa-pen-to-square"></i>Ta bort</a>

            </div>
        }
    </section>
</article>
}
else 
{
    <div class="box-item">Inga kurser finns i systemet</div>
}





