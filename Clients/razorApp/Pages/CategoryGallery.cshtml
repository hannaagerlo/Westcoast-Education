@model razorApp.Pages.CategoryGallery
@{
    ViewData["Title"] = "CategoryGallery";
}

<h1>@ViewData["Title"]</h1>

<h1 class="page-title">Våra kategorier</h1>
<br>
 <a class="go-back" asp-page="/Index"><i class="fa-solid fa-left-long"></i>Startsidan</a>
